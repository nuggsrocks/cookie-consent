{
  "name": "cookie-consent",
  "version": "1.2.1",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./iife": {
      "import": "./dist/consent.iife.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:iife": "esbuild iife.ts --bundle --minify --format=iife --loader:.css=text --outfile=dist/consent.iife.js",
    "build:esm": "esbuild index.ts --bundle --minify --format=esm --loader:.css=text --outfile=dist/index.js",
    "build:types": "tsc",
    "build": "rm -rf dist && pnpm build:iife && pnpm build:esm && pnpm build:types"
  },
  "packageManager": "pnpm@10.28.2",
  "devDependencies": {
    "@types/node": "^25.2.0",
    "esbuild": "^0.27.2",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  }
}
