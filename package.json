{
  "name": "cookie-consent",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:esm": "esbuild index.ts --bundle --format=esm --loader:.css=text --outfile=dist/index.js",
    "build:iife": "esbuild index.ts --bundle --minify --format=iife --loader:.css=text --outfile=dist/consent.js",
    "build:types": "tsc",
    "build": "rm -rf dist && pnpm build:esm && pnpm build:iife && pnpm build:types"
  },
  "packageManager": "pnpm@10.28.1",
  "devDependencies": {
    "@types/node": "^25.2.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3"
  }
}
